---
import { FormSchema } from "../../types";
import InputLayout from "./InputLayout.astro";

const { title, name, schema, value } = Astro.props as {
  title: string;
  name: string;
  schema: FormSchema;
  value: any;
};

const getInputType = () => {
  switch (schema.type) {
    case "string":
      return "text";
    case "password":
      return "password";
    case "email":
      return "email";
    case "search":
      return "search";
    case "url":
      return "url";
    default:
      return "text";
  }
};
---

<InputLayout schema={schema} name={name}>
  <input type={getInputType()} name={name} id={name} value={value}
    class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
    placeholder="Enter a value..." />
</InputLayout>