---
import { FormSchema } from "../../types";
import InputLayout from "./InputLayout.astro";

const { schema, name, value } = Astro.props as { schema: FormSchema; name: string, value: any };
---

<InputLayout schema={schema} name={name}>
  <input type="date" name={name} value={value}
    class="rounded-md border-gray-300 placeholder:italic text-gray-800 dark:text-white dark:bg-gray-700 dark:border-none placeholder:text-gray-300" />
</InputLayout>