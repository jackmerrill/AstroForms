---
import schema, { sampleData } from "../util/schema";
import { Form } from "../../../astro-forms";
import tailwind from "../../../astro-forms/themes/tailwind";

---

<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Astro Forms</title>
</head>

<body class="dark:bg-gray-900">
  <div class="py-8">
    <h1 class="font-bold text-2xl text-center dark:text-white">
      Astro Forms Example (TailwindCSS)
    </h1>

    <div class="max-w-4xl mx-auto">
      <Form schema={schema} data={sampleData} theme={tailwind} action="/" method="post" />
    </div>
  </div>
</body>

</html>